{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@huab/lib",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build:daemon": "bun build src/daemon.ts --target=node --format=esm --external 'gi://*' --external 'system' --outfile dist/daemon.js",
    "service": "bun build:daemon && gjs -m dist/daemon.js",
    "typecheck": "tsc --noEmit",
    "build": "echo 'To be worked on'",
    "lint": "oxlint --type-aware src",
    "lint:fix": "oxlint --type-aware --fix src",
    "format": "oxfmt src"
  },
  "dependencies": {
    "dbus-next": "^0.10.2"
  },
  "devDependencies": {
    "@girs/flatpak-1.0": "^1.16.1-4.0.0-beta.38",
    "@girs/gio-2.0": "^2.86.0-4.0.0-beta.38",
    "@girs/gjs": "^4.0.0-beta.38",
    "@girs/glib-2.0": "^2.86.0-4.0.0-beta.38",
    "@girs/glibunix-2.0": "^2.0.0-4.0.0-beta.38",
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
