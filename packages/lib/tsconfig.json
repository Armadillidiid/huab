{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "allowJs": true,
    "types": [
      "@girs/gio-2.0",
      "@girs/gjs",
      "@girs/glib-2.0",
      "@girs/glibunix-2.0",
      "@girs/flatpak-1.0"
    ],
    "noUncheckedIndexedAccess": false,
    "resolveJsonModule": true,

    // Native Node support
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
