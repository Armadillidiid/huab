{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@huab/dbus-examples",
  "version": "0.1.0",
  "type": "module",
  "description": "Comprehensive D-Bus examples demonstrating various usage patterns with modern TypeScript",
  "scripts": {
    "dev": "bun run src/index.ts",
    "service": "bun run src/01-basic-service.ts",
    "client": "bun run src/02-basic-client.ts",
    "signals": "bun run src/03-signals.ts",
    "properties": "bun run src/04-properties.ts",
    "system-bus": "bun run src/05-system-bus.ts",
    "full-example": "bun run src/06-full-example.ts",
    "manager-transactions": "bun run src/07-manager-transactions.ts",
    "sender-filtering": "bun run src/08-libpamac-sender-filtering.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint --type-aware src",
    "lint:fix": "oxlint --type-aware --fix src",
    "format": "oxfmt src"
  },
  "devDependencies": {
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dbus-next": "^0.10.2"
  }
}
